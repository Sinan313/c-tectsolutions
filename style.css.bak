:root {
    --primary-color: #2b6cb0;
    --secondary-color: #38a169;
    --success-color: #48bb78;
    --error-color: #e53e3e;
    --warning-color: #ed8936;
    --text-primary: #2d3748;
    --text-secondary: #4a5568;
    --text-muted: #718096;
    --bg-primary: #ffffff;
    --bg-secondary: #f7fafc;
    --bg-accent: #e6fffa;
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 3rem;
    --spacing-xl: 5rem;
    --border-radius: 15px;
    --shadow-sm: 0 5px 15px rgba(0, 0, 0, 0.08);
    --shadow-md: 0 10px 25px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 20px 40px rgba(0, 0, 0, 0.15);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-family);
    line-height: 1.6;
    color: var(--text-primary);
    overflow-x: hidden;
}
main,
.section,
.page {
    margin-top: 70px; /* or padding-top: 70px; */
}


/* Navigation */
        nav {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(15px);
            z-index: 1000;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(226, 232, 240, 0.2);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
        }

        .logo img {
            width: 40px;
            height: 40px;
            object-fit: contain;
        }

        .logo span {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2b6cb0;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 0;
            background: #f8fafc;
            padding: 0.5rem;
            border-radius: 50px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .nav-links li {
            margin: 0;
        }

        .nav-links a {
            text-decoration: none;
            color: #64748b;
            font-weight: 500;
            padding: 0.8rem 1.5rem;
            border-radius: 25px;
            transition: all 0.3s ease;
            cursor: pointer;
            font-size: 0.95rem;
            position: relative;
            display: block;
        }

        .nav-links a:hover {
            color: #1e293b;
            background: rgba(255, 255, 255, 0.7);
        }

        .nav-links a.active {
            background: linear-gradient(135deg, #dde6f5 0%, #7196fa 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
            transform: translateY(-1px);
        }

        .login-btn {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 0.8rem 1.8rem;
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
            cursor: pointer;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

        .mobile-menu {
            display: none;
            flex-direction: column;
            cursor: pointer;
        }

        .mobile-menu span {
            width: 25px;
            height: 3px;
            background: #4a5568;
            margin: 3px 0;
            transition: 0.3s;
        }

/* Logo Image Integration */
.logo img,
.logo-image-file {
    width: 100px;
    height: 100px;
    object-fit: contain;
}
/* .logo-image-file:hover {
    /* No zoom effect */

/* Fallback Logo Text */
.logo-text {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logo-image {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
}

/* Hide text logo when image is present */
.logo:has(.logo-image-file) .logo-text {
    display: none;
}

.nav-links {
    display: flex;
    list-style: none;
    gap: var(--spacing-md);
}

.nav-links a {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 500;
    transition: color 0.3s ease;
    cursor: pointer;
}

.nav-links a:hover,
.nav-links a:focus,
.nav-links a.active {
    color: var(--primary-color);
}

.login-btn {
    background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
    color: white;
    padding: var(--spacing-xs) 1.5rem;
    border-radius: 25px;
    cursor: pointer;
    transition: transform 0.3s ease;
    border: none;
    font-weight: 500;
}

.login-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(66, 153, 225, 0.3);
}

/* Mobile menu toggle */
.mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 1.5rem;
    color: var(--primary-color);
    cursor: pointer;
}

/* Dropdown styles */
.dropdown {
    position: relative;
}

.dropdown-menu {
    position: absolute;
    top: 100%;
    right: 0;
    background: white;
    border-radius: 10px;
    box-shadow: var(--shadow-md);
    min-width: 150px;
    display: none;
    z-index: 1001;
}

.dropdown-menu.active {
    display: block;
}

.dropdown-menu a {
    display: block;
    padding: 10px 15px;
    color: var(--text-secondary);
    text-decoration: none;
    border-bottom: 1px solid #e2e8f0;
}

.dropdown-menu a:hover {
    background: var(--bg-secondary);
    color: var(--primary-color);
}

.dropdown-menu a:last-child {
    border-bottom: none;
}

/* Message styles */
.message {
    position: fixed;
    top: 80px;
    right: 20px;
    padding: 1rem 1.5rem;
    border-radius: 10px;
    color: white;
    font-weight: 500;
    z-index: 1002;
    display: none;
    max-width: 400px;
    box-shadow: var(--shadow-md);
}

.message.success {
    background: var(--success-color);
}

.message.error {
    background: var(--error-color);
}

.message.warning {
    background: var(--warning-color);
}

/* Warning styles */
.warning {
    background: rgba(237, 137, 54, 0.1);
    border: 1px solid var(--warning-color);
    border-radius: 8px;
    padding: 0.75rem 1rem;
}

/* Hero Section */
.hero {
    min-height: 100vh;
    background: linear-gradient(135deg, var(--bg-accent) 0%, #f0fff4 50%, var(--bg-accent) 100%);
    display: flex;
    align-items: center;
    padding: var(--spacing-md);
    position: relative;
    overflow: hidden;
}

.hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 200%;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="%23ffffff" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    animation: float 20s infinite linear;
}

@keyframes float {
    0% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
    100% { transform: translateY(0px) rotate(360deg); }
}

.hero-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    z-index: 2;
    position: relative;
}

.hero-content h1 {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-content .tagline {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
    font-weight: 500;
}

.hero-content .intro {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin-bottom: var(--spacing-md);
    line-height: 1.7;
}

.cta-buttons {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-md);
}

.btn {
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    display: inline-block;
    text-align: center;
}

.btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
}

.btn-primary {
    background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
    color: white;
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(66, 153, 225, 0.4);
}

.btn-secondary {
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
}

.btn-secondary:hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-3px);
}

.hero-image {
    text-align: center;
}

.hero-image img {
    width: 400px;
    height: 400px;
    border-radius: 50%;
    object-fit: cover;
    border: 8px solid white;
    box-shadow: var(--shadow-md);
    animation: bounce 6s infinite;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
}

/* Section Styles */
.section {
    padding: var(--spacing-xl) var(--spacing-md);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-lg);
    color: var(--text-primary);
}

/* Resources Section Styles */
.resource-search {
    max-width: 600px;
    margin: 0 auto 2rem;
}

.search-container {
    position: relative;
}

.search-container i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
}

.search-container input {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    border: 2px solid #e2e8f0;
    border-radius: 25px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: white;
    box-shadow: var(--shadow-sm);
}

.search-container input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
}

/* Resource Tabs */
.resource-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
}

.tab-btn {
    padding: 0.75rem 2rem;
    border: 2px solid var(--primary-color);
    background: transparent;
    color: var(--primary-color);
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
}

.tab-btn.active,
.tab-btn:hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-2px);
}

/* Resources Grid */
.resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.resource-box {
    background: white;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    border: 1px solid #e2e8f0;
}

.resource-box:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
}

.resource-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.resource-content {
    padding: 1.5rem;
    position: relative;
}

.resource-content h3 {
    color: var(--primary-color);
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
}

.resource-content p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
}

.expand-btn {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 40px;
    height: 40px;
    border: none;
    background: var(--primary-color);
    color: white;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.expand-btn:hover {
    background: var(--secondary-color);
    transform: scale(1.1);
}

.expand-btn i {
    transition: transform 0.3s ease;
}

.expand-btn.expanded i {
    transform: rotate(90deg);
}

/* Resource Expanded Content */
.resource-expanded {
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-top: 1px solid #e2e8f0;
    display: none;
}

.resource-expanded.show {
    display: block;
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.resource-expanded h4 {
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.resource-expanded ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
}

.resource-expanded ul li {
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
}

.resource-actions {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

/* Progress Bar Styles */
.progress-bar-container {
    background: #e2e8f0;
    height: 10px;
    border-radius: 5px;
    width: 200px;
    margin: 0.5rem 0;
    overflow: hidden;
}

.progress-bar {
    background: var(--success-color);
    height: 10px;
    border-radius: 5px;
    transition: width 0.3s ease;
}

/* Stats Section */
.stats-section {
    background: var(--bg-secondary);
    padding: 4rem 2rem;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.stat-card {
    background: white;
    padding: var(--spacing-md);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    text-align: center;
    transition: transform 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-5px);
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--primary-color);
    margin-bottom: var(--spacing-xs);
}

.stat-label {
    color: var(--text-muted);
    font-weight: 500;
}

/* Course Filter */
.course-filter {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.5rem 1rem;
    border: 2px solid var(--primary-color);
    background: transparent;
    color: var(--primary-color);
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-btn.active,
.filter-btn:hover {
    background: var(--primary-color);
    color: white;
}

/* Course grid styles */
.courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
}

.course-card {
    background: white;
    border-radius: 20px;
    padding: 0;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    border: 1px solid #e2e8f0;
    overflow: hidden;
}

.course-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
}

.course-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid #e2e8f0;
}

.course-content {
    padding: var(--spacing-md);
}

.course-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-sm);
}

.course-card h3 {
    color: var(--primary-color);
    font-size: 1.5rem;
    margin-bottom: 0;
}

.course-rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.9rem;
    color: #f59e0b;
}

.course-rating span {
    color: var(--text-muted);
    margin-left: 0.25rem;
}

.course-details {
    display: flex;
    justify-content: space-between;
    margin: var(--spacing-sm) 0;
    color: var(--text-muted);
    font-size: 0.9rem;
}

.course-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--primary-color);
    margin: var(--spacing-sm) 0;
}

.course-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: var(--success-color);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 600;
}

.course-card {
    position: relative;
}

/* Progress Chart Styles */
.progress-chart {
    background: white;
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    margin: var(--spacing-md) 0;
    box-shadow: var(--shadow-sm);
}

.chart-container {
    position: relative;
    height: 300px;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

#progressChart {
    max-width: 100%;
    height: auto;
}

/* Dashboard Styles */
.dashboard {
    background: var(--bg-secondary);
    min-height: 100vh;
    padding-top: 100px;
}

/* Enhanced Profile Styles */
.profile {
    background: var(--bg-secondary);
    min-height: 100vh;
    padding-top: 100px;
}

.profile-layout {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
}

.profile-header-section {
    margin-bottom: 3rem;
}

.profile-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
}

.profile-header {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    padding: var(--spacing-lg);
    text-align: center;
    color: white;
}

.profile-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    margin: 0 auto var(--spacing-sm);
}

/* Profile Content Grid */
.profile-content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
}

.profile-section {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
}

.section-header {
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-bottom: 1px solid #e2e8f0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.section-header h2 {
    color: var(--primary-color);
    margin: 0;
    font-size: 1.5rem;
}

.profile-info {
    padding: 1.5rem;
}

.info-row {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid #e2e8f0;
}

.info-row:last-child {
    border-bottom: none;
}

.info-label {
    font-weight: 600;
    color: var(--text-secondary);
}

.info-value {
    color: var(--text-primary);
}

/* Privacy Content */
.privacy-content {
    padding: 1.5rem;
}

.privacy-item h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
}

.privacy-item p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
}

/* Enrolled Courses */
.enrolled-courses {
    padding: 1.5rem;
}

.enrolled-courses h3 {
    color: var(--primary-color);
    margin-bottom: 1.5rem;
}

.courses-list {
    margin-bottom: 1.5rem;
}

.course-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    margin-bottom: 1rem;
    background: var(--bg-secondary);
}

.course-info {
    flex: 1;
}

.course-info h4 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.progress-text {
    font-size: 0.9rem;
    color: var(--text-muted);
}

.course-status {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    white-space: nowrap;
}

.course-status.completed {
    background: var(--success-color);
    color: white;
}

.course-status.in-progress {
    background: var(--warning-color);
    color: white;
}

.course-status.pending {
    background: var(--text-muted);
    color: white;
}

/* Miscellaneous Content */
.misc-content {
    padding: 1.5rem;
}

.misc-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e2e8f0;
}

.misc-item:last-child {
    border-bottom: none;
}

.misc-item i {
    color: var(--primary-color);
    width: 20px;
    text-align: center;
}

/* Grades Content */
.grades-content {
    padding: 1.5rem;
}

.grade-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e2e8f0;
}

.grade-item:last-child {
    border-bottom: none;
}

.course-name {
    color: var(--text-primary);
    font-weight: 500;
}

.grade {
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-weight: 600;
    font-size: 0.9rem;
}

.grade.excellent {
    background: var(--success-color);
    color: white;
}

.grade.good {
    background: var(--warning-color);
    color: white;
}

.grade.pending {
    background: var(--text-muted);
    color: white;
}

/* Login Activity */
.login-activity {
    padding: 1.5rem;
}

.activity-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e2e8f0;
}

.activity-item:last-child {
    border-bottom: none;
}

.activity-item i {
    color: var(--primary-color);
    width: 20px;
    text-align: center;
}

.activity-details strong {
    color: var(--text-primary);
}

.activity-details span {
    color: var(--text-secondary);
    display: block;
    font-size: 0.9rem;
}

/* Login/Signup Styles */
.auth {
    background: linear-gradient(135deg, var(--bg-accent) 0%, #f0fff4 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md);
}

.auth-container {
    background: white;
    padding: var(--spacing-lg);
    border-radius: 20px;
    box-shadow: var(--shadow-md);
    width: 100%;
    max-width: 400px;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    color: var(--text-primary);
    font-weight: 500;
}

.form-group input {
    width: 100%;
    padding: var(--spacing-sm);
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.form-group input:focus {
    outline: none;
    border-color: var(--primary-color);
}

/* Contact Form */
.contact-form {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: var(--shadow-sm);
    margin-top: 2rem;
}

/* Hidden class */
.hidden {
    display: none !important;
}

/* Footer */
footer {
    background: #535353;
    color: white;
    padding: 4rem 2rem 2rem;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
}

.footer-section h3 {
    color: #e2e8f0;
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
}

.footer-section p, .footer-section li {
    color: #a0aec0;
    line-height: 1.6;
    margin-bottom: 0.5rem;
}

.footer-section ul {
    list-style: none;
    padding: 0;
}

.footer-section ul li {
    padding: 0.3rem 0;
}

.footer-section ul li a {
    color: #a0aec0;
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section ul li a:hover {
    color: #4299e1;
}

.social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
}

.social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    background: #2d3748;
    color: white;
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
}

.social-links a:hover {
    background: #4299e1;
    transform: translateY(-2px);
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.contact-item i {
    color: #4299e1;
    width: 20px;
    flex-shrink: 0;
}

.footer-bottom {
    border-top: 1px solid #2d3748;
    padding-top: 2rem;
    text-align: center;
    color: #718096;
}

.footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.footer-links {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
}

.footer-links a {
    color: #a0aec0;
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-links a:hover {
    color: #4299e1;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .hero-container {
        gap: 2rem;
    }
    
    .hero-image img {
        width: 350px;
        height: 350px;
    }
    
    .container {
        padding: 0 1rem;
    }

    .profile-content-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .nav-links {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        box-shadow: var(--shadow-md);
        flex-direction: column;
        padding: 1rem;
    }

    .nav-links.mobile-active {
        display: flex;
    }

    .mobile-menu-toggle {
        display: block;
    }

    .logo {
        font-size: 1.2rem;
    }

    .logo-image,
    .logo-image-file {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }

    .hero-container {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }

    .hero-content h1 {
        font-size: 2.5rem;
    }

    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }

    .section-title {
        font-size: 2rem;
    }

    .container {
        padding: 0 1rem;
    }

    .footer-bottom-content {
        flex-direction: column;
        text-align: center;
    }

    .footer-links {
        justify-content: center;
    }

    .contact-item {
        align-items: flex-start;
    }

    .stats-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    .course-filter,
    .resource-tabs {
        flex-direction: column;
        align-items: center;
    }

    .courses-grid,
    .resources-grid {
        grid-template-columns: 1fr;
    }

    .course-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }

    .course-details {
        flex-direction: column;
        gap: 0.25rem;
    }

    .progress-bar-container {
        width: 100%;
    }

    .profile-content-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .course-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }

    .course-status {
        align-self: flex-end;
    }
}

@media (max-width: 480px) {
    .hero-image img {
        width: 300px;
        height: 300px;
    }

    .auth-container {
        padding: 2rem;
    }

    .nav-container {
        padding: 0.5rem 1rem;
    }

    .section {
        padding: 2rem 1rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        font-size: 0.9rem;
    }

    .hero-content h1 {
        font-size: 2rem;
    }

    .stat-number {
        font-size: 2rem;
    }

    .course-card {
        margin-bottom: 1rem;
    }

    .resources-grid {
        gap: 1rem;
    }

    .resource-content {
        padding: 1rem;
    }

    .expand-btn {
        width: 35px;
        height: 35px;
        top: 1rem;
        right: 1rem;
    }
}

@media (max-width: 320px) {
    .hero-content h1 {
        font-size: 1.75rem;
    }

    .hero-image img {
        width: 250px;
        height: 250px;
    }

    .logo {
        font-size: 1rem;
    }

    .section-title {
        font-size: 1.5rem;
    }

    .profile-content-grid {
        gap: 0.5rem;
    }
}